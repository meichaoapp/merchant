        <view class='label'><text>商超名称</text></view>
        <view class='box-contacts'><input name="merchantName"></input></view>
     </view>
     <view class='box-base'>
      <view class='box-location-text'><text>商超商超</text></view>
      <view  class='box-location' bindtap='getStartLocation'>
        <image class='location-icon' src='/static/images/local-icon.png'></image>
        <text>{{startPoint ||'获取位置'}}</text>
      </view>
    </view>
      <view class='box-base'>
        <view class='label'><text>联系电话</text></view>
        <view class='box-contacts'><input name="merchantName"></input></view>
     </view>

      <button class="fb-btn">提交</button>
   </view>

  
</view>