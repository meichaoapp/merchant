
.container{
    background: #f4f4f4;
    min-height: 100%;
}
.box {
  display: flex;
  background: #fff;
}

.box-title {
  font-size: 13pt;
}

.box-bd {
  flex: 1;
  display: flex;
  flex-direction: column;
  padding: 15rpx 40rpx 30rpx;
}
.help-q {
  color: #999;
  font-size: 11pt;
  line-height: 200%;
  margin-top: 5rpx;
}
.help-a {
  color: #555;    
  text-indent: 1em;
  line-height: 160%;
  display: flex;
  flex-direction: column;
}
.help-a text{
  word-break: break-all;
}

.form{
  width: 100%;
  background: #fff;
  padding-top: 20rpx;
}
.title{
  margin-left:10px;
  margin-top:10px;
  font-weight: bold;
  color: #666;
  line-height: 39px;
  font-size:11pt;
}
.box-base{
  display: flex;
  justify-content: flex-start;
  padding: 30rpx 65rpx 23rpx 50rpx;
  border-bottom: 1px solid #DFDFDF;
  font-size: 30rpx;
  color: #666666;
}
 .label{
  margin-top:2px;
  color:#666666;
  width:69px;
}
input{
  font-size: 26rpx;
  color: #CCCCCC;
}
 .location-icon{
   width:11px;
  height:15px;
  margin-top:-3px;
  margin-right:6px;
 }

.card-check{
  width: 36rpx;
  height:36rpx;
}
.box-contacts{
  margin-left: 39rpx;
}
.box-checked{
  margin-left: 35rpx;
  margin-right: 14rpx;
}
.box-location-text{
  margin-right: 80rpx;
}
.box-location{
  width: 400rpx;
}
.box-pedestal{
  margin-right: 65rpx;
}


.fb-btn{
    width:690rpx;
    height:85rpx;
    line-height:85rpx;
    margin:39rpx 29.5rpx;
    text-align:center;
    background:#FF8811;
    border-radius:10rpx;
    font-size:32rpx;
    color:#FFFFFF;
    letter-spacing:-0.01rpx;
}
