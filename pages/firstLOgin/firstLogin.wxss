.cover-img {
  width: 100%;
  height: 376rpx;
}
.main-title {
  border-top:solid 24rpx rgb(245, 245, 245); 
  padding: 40rpx 0 32rpx 32rpx;
  font-size: 32rpx; 
  color: rgb(51,51,51);
}
input.invite-code {
  border: solid 1px rgb(191,191,191);
  padding: 30rpx;
  width: 622rpx;
  margin: 0 auto;
}
