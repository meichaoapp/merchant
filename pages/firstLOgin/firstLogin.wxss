  color: rgb(153,153,153);
}
.confirm-btn {
  width: 140px;
  height: 80rpx;
  color: #fff; 
  border-radius: 40rpx; 
  border: none;
  background: rgb(114,207,221);
  font-size: 32rpx; 
  position: fixed;
  left: 50%;
  right: 50%;
  transform: translate(-59%,-59%);
  bottom: 54rpx;
}
