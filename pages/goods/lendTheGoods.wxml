<import src="../../components/toast/toast.wxml"/>
<template is="toast" data="{{ ...$wux.toast }}"/>
<view class='flex flex_between flex group_details_box'>
  <image class='icon_group_buying' src='../../static/images/icon_group_buying.png'></image>
  <view class='flex_1'>
    <view>
     <text>团购名称：</text>
     <text> {{name}} </text>
  </view>
  <view>
     <text>参团人：</text>
     <text>{{userName}}</text>
  </view>
  <view>
     <text>参团时间：</text>
     <text>{{joinTime}}</text>
  </view>
  </view>
</view>

<view class='flex flex_center flex_just checkOk'>
  <image class='icon_check_yes' src='../../static/images/icon_check_yes.png'></image>
  <image class='icon_check_isok' src='../../static/images/icon_check_isok.png'></image>
</view>

<view class='shop-lists'>
   <view class='main-title'>购物清单</view>
   <view class="lists-box">
     <view class='list-item flex flex_between flex_center' wx:for="{{goodsList}}" wx:for-index="index" wx:for-item="item" wx:key="{{item.id}}">
        <image class='shop-img' src='{{item.url}}'></image>
        <view class='flex flex_colum flex_start flex_1'>
          <text class='shop-title'>{{item.name}}</text>
          <text class='shop-brief'>{{item.specifications}}</text>
        </view>
        <view class='total-count'>1{{item.unit}}*{{item.buyNum}}</view>
     </view>

  

     
   </view>
</view>

<view class='flex flex_center flex_just btn-box'> 
  <button class='confirm-btn' bindtap='toIndex'>取消</button>
  <button class="confirm-btn {{status != 2 ? 'graybtn' : '' }}" bindtap='leadOrder'>确认领取</button>
</view>