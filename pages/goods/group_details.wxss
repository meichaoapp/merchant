/* pages/goods/lengSHops.wxss */
page {
  background: rgb(245, 245, 245);
}
.people-lists {
  background: #fff;
  margin-top: 18rpx;
  margin-bottom:20rpx;

}
.people-lists .main-title {
  font-size: 32rpx;
  color: #000;
  padding: 40rpx 30rpx;
  border-bottom: solid 1px #f0f0f0;
}
.lists-box {
  padding:0 30rpx;
}
.lists-item{
  padding:20rpx 0;
  border-bottom: solid #f0f0f0 1px;
}
.list-item:last-child {
  border: none;
}
.shop-img {
 width:70rpx;
 height: 70rpx;
 margin-right: 20rpx;
 border-radius: 100%;
}
.shop-title {
  font-size: 28rpx;
  line-height:42rpx;
  color: #000;
  width: 230rpx;
  margin-right:10rpx;
}
.shop-brief {
  font-size: 20rpx;
  color: rgb(102,102,102);
  display: inline-block;
  text-align: justify;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
  padding:10rpx 0;
}
.total-count {
 font-size: 26rpx;
}
input.invite-code {
  border: solid 1px rgb(191,191,191);
  padding: 30rpx;
  width: 622rpx;
  margin: 0 auto;
}
input::-webkit-input-placeholder {
  color: rgb(153,153,153);
}
.right-details {
  flex:1;
  width:0;
}
.intro{
  width:0;
}
