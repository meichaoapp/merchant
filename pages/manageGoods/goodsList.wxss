page{
    height:100%;
}
.goods_list_box{
    min-height:100%;
}
.search_box{
    padding:20rpx 30rpx;
    position:relative;
    border-bottom:1px solid #EEEEEE;
}
.search_box .input{
    background:#F3F3F3;
    border-radius:29rpx;
    border:1px solid #eee;
    padding:0 28rpx;
    padding-left:67rpx;
}
.icon_search{
    width:29rpx;
    height:30rpx;
    margin-right:10rpx;
    position:absolute;
    left:58rpx;
    top:15rpx;

}
.menu{
    height:90rpx;
    border-bottom:1px solid #eee;
    width:100%;
}
.menu view{
    height:90rpx;
    line-height:90rpx;
    text-align:center;
}
.on{
    border-bottom:2px solid #79C54C;
    color:#79C54C;
    font-weight:bold;
}

.single_item{
    margin-top:20rpx;
}
.top_part{
    padding:35rpx 30rpx;
    border-bottom: 1px solid #EEEEEE;
}
.top_part image{
    width:189rpx;
    height:189rpx;
    margin-right:20rpx;
    border-radius: 5rpx;
}
.top_part .info .name{
    line-height:42rpx;
}
.desc{
    margin-top:10rpx;
    margin-bottom:30rpx;
}
.bottom_part{
    height:80rpx;
    padding:0 30rpx;
}
.btn_box view{
    width:114rpx;
    height:40rpx;
    text-align:center;
    line-height: 40rpx;
    border: 1rpx solid #C8C8C8;
    border-radius: 20.5rpx;
}
.btn_box view:first-child{
    margin-right:15rpx;
}
.fixed_bottom{
    position:fixed;
    bottom:0;
    left:0;
    width:100%;
    height:98rpx;
    background: #81C95A;
}
.icon_add{
    width:34rpx;
    height:34rpx;
    margin-right:10rpx;
}
.n-bottom{
    padding-bottom:137rpx;
}